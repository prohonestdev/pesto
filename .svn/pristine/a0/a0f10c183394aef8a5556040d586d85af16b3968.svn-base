@import "config/common";

@media (min-width: 768px) {
    .blog.type1,.blog.type2 {
        div.pagination {
            float: left;
            width: 50%;
            span {
                float: left;
            }
            .pagination {
                float: right;
            }
        }
        
    }
    .blog.type1 {
        .post {
            .post-date {
                float: left;
                padding-left: 29px;
                padding-top: 62px;
                width: 17.241%;
            }
            .post-comment {
                border-left: solid 1px $color2;
                float: left;
                padding-left: 25px;
                width: 82.759%;
            }
        }
    }
    .blog.type3 {
        .post {
            .post-date {
                float: left;
                padding: 99px 12px 0 12px;
                width: 15%;
            }
            .post-comment {
                float: left;
                padding-top: 29px;
                width: 85%;
            }

        }
    }
}
@media (min-width: 920px){
    .blog.type2 div.post-image {
        & {
            float: left;
            width: 51.72413793103448%;
        }
        &+div {
            float: left;
            padding-left: 30px;
            width: 48.27586206896552%;
        }
    }

}
@media (min-width: 1170px) {
    .blog.type3 {
        .post {
            .breadcrumb,.favorite-links {
                padding-top: 30px;
                margin-bottom: 85px;
            }
            .favorite-links {
                float: right;
            }
        }
    }
}
.blog.type1,.blog.type2,.blog.type3 {
    .post-comment {
        > a {
            display: inline-block;
            font-family: $font-secondary;
            font-size: 13.01px;
            padding: 8px 30px;
        }
    }
    .post-date {
        span {
            font-family: $font-tertiary;
        }
        .day {
            color: #dadada;
            font-size: 30px;
        }
        .month,.divider,.comment-length {
            color: #e3e3e3;
            font-size: 13px;
        }
    }
    .post-image {
        img {
            max-width: 100%;
            width: 100%;
        }
    }
    
}

.blog.type1,.blog.type2 {
    div.pagination {
        padding: 20px 0;
        width: 100%;
        > div {
            >span {
                padding: 9px 0px;
            }
        }
        span {
            color: #c5c5c5;
            font-family: $font-primary;
            font-size: 14px;
        }
        .pagination {
            height: 35px;
            text-align: right;
        }
    }
}

.blog.type1 {
    margin-bottom:0px;
    h1 {
        color: $color-dark;
        font-family: $font-secondary;
        font-size: 23px;
        letter-spacing: 1.4px;
        text-transform: uppercase;
    }
    .theme-row {
        padding-left: 0;
        padding-right: 0;
        width: 100%;
        @include clearfix;
    }
    .post {
        padding-bottom: 87px;
        .post-comment {
            p {
                color: $color3;
                font-family: "Arial";
                font-size: 15px;
                line-height: 22px;
                margin-bottom: 32px;
                padding-top: 5px;
                word-spacing: 1px;
            }
        }
        .post-image {
            padding-bottom: 25px;
        }
    }
}

.blog.type2 {
    h1 {
        font-family: $font-primary;
        font-size: 23px;
        margin: 9px 0;
    }
    .post {
        padding: 40px 0;
        .post-image+div {
            padding-top: 9px; 
        }
        
        .post-comment {
            a {
                margin-top: 13px;
            }
            p {
                line-height: 23px;
                margin: 0;
                padding: 6px 0;
            }
        }
    }
    .post:first-child {
        padding-top: 0;
    }
    
}
.blog.type3 {
    h1 {
        font-family: $font-secondary;
        font-size: 23px;
        text-transform: uppercase;
        margin-bottom: 14px;
    }
    h3 {
        color: $color-dark;
        font-family: $font-secondary;
        font-size: 22px;
    }
    .post {
        .post-comment {
            padding-top: 29px;
            p {
                color: $color3;
                font-family: "Arial";
                font-size: 16px;
                margin-bottom: 14px;
            }
            .special {
                margin-bottom: 5px;
                margin-top: -21px;
                i {
                    color: #cecece;
                    display: block;
                    font-size: 15px;
                    padding: 34px 0px 30px 36px;
                    position: relative;
                    &:before {
                        content: "\201C";
                        font-size: 64px;
                        left: 0px;
                        position: absolute;
                        top: 12px;
                    }
                }
            }
            
            .breadcrumb {
                background: transparent;
                padding-left: 0;
                li , a {
                    color: #d7d7d7;
                    font-family: $font-primary;
                    font-size: 15px;
                }
            }
            
            .favorite-links {
                li {
                    padding: 0;
                    a {
                        border: 1px solid $color41;
                        display: block;
                        height: 32px;
                        text-align: center;
                        width: 32px;
                        i {
                            line-height: 30px;
                        }
                    }
                }
            }
            .man {
                background-color: $color2;
                padding: 42px 0;
                h3 {
                    text-transform: uppercase;
                }
                > div {
                    float: left;
                }
                .image {
                    margin-left: 25px;
                    width: 126px;
                    img {
                        border-radius: 50%;
                        width: 100%;
                    }
                }
                .image-comment {
                    margin-top: -9px;
                    padding-left: 30px;
                    @include calc(width,"100% - 155px");
                    h3 {
                        font-size: 20px;
                    }
                    p {
                        color: $color3;
                    }

                }
            }
            .comments {
                margin-top: 99px;
                .theme-row {
                    margin: 0;
                    padding-top: 17px;
                    padding-bottom: 23px;
                    @include clearfix;
                    .image,.image-comment{
                        float: left;
                    }

                    .image {
                        margin-top: 24px;
                        width: 85px;
                        img {
                            border-radius: 50%;
                            width: 100%;
                        }                        
                    }
                    .image-comment {
                        margin-top: 7px;    
                        padding-left: 22px;
                        @include calc(width,"100% - 85px");
                        a {
                            color: $color-dark;
                            font-family: $font-secondary;
                            font-size: 16px;
                        }
                        i {
                            font-size: 19px;
                        }
                        span {
                            color: $color5;
                            padding: 2px 0;
                            display: block;
                            font-family: "Arial";
                            font-size: 14px;
                        }

                    }
                }
            }
            .review-customer {
                padding-top: 47px;
                h3 {
                    margin-bottom: 26px;
                }
                input[type="text"] {
                    height: 38px;
                    margin: 6px 0;
                }
                input[type='submit'] {
                    margin-top: 23px;
                }
                textarea {
                    height: 150px;
                    margin: 6px 0;
                }
                input,textarea {
                    padding: 0 15px;
                }
            }
        }
        
    }
}

.sidebar {
    >div {
        padding-bottom: 15px;
    }
    h4 {
        color: #787878;
        font-family: $font-secondary;
        font-weight: bold;
        height: 100%;
        letter-spacing: 0.9px;
        line-height: 45px;
        margin: 15px 0;
    }
    .widget-category {
        padding-bottom: 30px;
    }
    .theme-row {
        padding: 15px 0;
        @include clearfix;
    }
    .popular-post {
        >.theme-row {
            .image,.image-comment {
                float: left;
            }
            .image {
                width: 85px;
            }
            .image-comment {
                padding-left: 25px;
                padding-top: 5px;
                @include calc(width,"100% - 85px");
            }
        }
        .image-date span {
            color: #dadada;
            font-family: $font-tertiary;
            font-size: 16px;
        }
        .comment {
            color: #808080;
            font-family: $font-primary;
            font-size: 15px;
            line-height: 20px;
        }
    }
    .comments {
        > .theme-row {
            .image,.image-comment {
                float: left;
            }
            .image {
                margin-top: 9px;
                width: 61px;
                img {
                    max-width: 100%;
                }
            }
            .image-comment {
                padding-left: 22px;
                margin-top: -5px;
                @include calc(width,"100% - 61px");    
            }
        }
        .image-comment {
            >p {
                color: #808080;
                font-family: $font-primary;
                font-size: 15px;
                line-height: 20px;
                margin: 0;
                padding: 8px 0;
                word-spacing: -3.1px;
            }
            strong {
                font-family: $font-primary;
                font-size: 16px;    
            }
            span {
                color: #d1d1d1;
                font-family: "Arial";
                font-size: 14px;
            }
        }
    }
    .archives {
        ul {
            padding: 0;
            margin: 0;
            li:first-child {
                margin-top: -4px;
                padding-top: 0;
            }
            li {
                padding-top: 9px;
                input {
                    margin: 0;
                }
                span {
                    font-family: $font-primary;
                    font-size: 14px;
                    padding-left: 12px;
                }
            }
        }
    }
    .late-video {
        margin-top: -10px;
        .videoWrapper {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 */
            padding-top: 25px;
            height: 0;
        }
        .videoWrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    }
    .tag-cloud {
        .tag-list{
            margin: -6px 0 0 -5px;
            padding: 0 5px;
            li {
                display: inline-block;
                font-family: $font-primary;
                font-size: 12px;
                border: 1px solid #F1F1F1;
                margin-top: 8px;
                padding: 5px 15px;
            }
        }
    }
    
    .flickr-stream {
        .flickr-group {
            float: left;
            width: 50%;
            > .flickr {
                padding: 1px;
                width: 100%;
            }
            img {
                max-width: 100%;
            }
        }
    }
}
@media (max-width: 767px) {
    .blog.type1 .post .post-date {
        padding-left: 0px;
    }
    .blog.type3 {
        .post .post-comment .man .image {
            width: 50px;
            margin: 0;
            &+.image-comment {
                @include calc(width,"100% - 50px");
            }
        }
    }
}