/* Spacement */
$repeat_count: 20; 
$five: 5;

@for $i from 1 to $repeat_count {
  .pl-five-#{$i} { padding-left:    #{$i * $five}px !important; }
  .pr-five-#{$i} { padding-right:   #{$i * $five}px !important; }
  .pt-five-#{$i} { padding-top:     #{$i * $five}px !important; }
  .pb-five-#{$i} { padding-bottom:  #{$i * $five}px !important; }
  .ml-five-#{$i} { margin-left:     #{$i * $five}px !important; }
  .mr-five-#{$i} { margin-right:    #{$i * $five}px !important; }
  .mt-five-#{$i} { margin-top:      #{$i * $five}px !important; }
  .mb-five-#{$i} { margin-bottom:   #{$i * $five}px !important; }  
  .pl-minus-five-#{$i} { padding-left:    -#{$i * $five}px !important; }
  .pr-minus-five-#{$i} { padding-right:   -#{$i * $five}px !important; }
  .pt-minus-five-#{$i} { padding-top:     -#{$i * $five}px !important; }
  .pb-minus-five-#{$i} { padding-bottom:  -#{$i * $five}px !important; }
  .ml-minus-five-#{$i} { margin-left:     -#{$i * $five}px !important; }
  .mr-minus-five-#{$i} { margin-right:    -#{$i * $five}px !important; }
  .mt-minus-five-#{$i} { margin-top:      -#{$i * $five}px !important; }
  .mb-minus-five-#{$i} { margin-bottom:   -#{$i * $five}px !important; }
}

