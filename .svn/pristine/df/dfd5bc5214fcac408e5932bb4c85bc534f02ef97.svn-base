}

function menuFixed(fixedClass,flag) {
    if (flag == 'add') {
        if (!fixedClass.hasClass('fixed-top')) {
            fixedClass.addClass('fixed-top');
        }
    }
    else {
        if (fixedClass.hasClass('fixed-top')) {
            fixedClass.removeClass('fixed-top');
        }    
    }        
}

$(document).ready(function() {
