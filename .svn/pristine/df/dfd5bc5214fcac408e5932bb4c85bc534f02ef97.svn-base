	setSelect();
    setSlider();
    
	if ('#header'.length) {
	    $(window).scroll(function() {
	    	if ($(window).width() < 992 || $('.left-sidebar').length == 0 ) {
		        if (0 < $(window).scrollTop())
		        {
		            menuFixed($('.header-body'),'add');    
		        }
		        else {
		            menuFixed($('.header-body'),'remove');
		        }          
