
/*-----------------------------------------------------------------------------
- SELECTS
-----------------------------------------------------------------------------*/
$checkbox-icon-color: #d1d1d1;
$checkbox-icon-width: 14px;
$checkbox-icon-height: 14px;
$checkbox-text-color: #9e9e9e;

$inputbox-border-color: #efefef;
$inputbox-icon-width: 25px;
$inputbox-icon-height: 25px;
$inputbox-icon-color: #939393;

.input-container {
    margin-bottom: -2px;
    display: inline-block;
    height: $checkbox-icon-height;
    position: relative;
    width: $checkbox-icon-width;
    color: $checkbox-icon-color;
    
    input {
        height: $checkbox-icon-height;
        left: 0;
        margin: 0;
        opacity: 0;
        padding: 0;
        position: absolute;
        top: 0;
        width: $checkbox-icon-width;
        z-index: 99; 
        
        &:hover {
            cursor: pointer;
        }
    }
    
	.input-skin	{
        height: $checkbox-icon-height;
        left: 0;
        position: absolute;
        top: 0;
        width: $checkbox-icon-width;
        
        &.checked {
            .visible-checked {
                display: block !important;   
            } 

            .visible-unchecked {
                display: none !important;
            }
        }
    }

    .visible-checked {
        display: none;
    }

    .visible-unchecked {
        display: block;   
    }
}

.inputbox-container {
    margin-bottom: -2px;
    display: inline-block;
    height: $inputbox-icon-height;
    position: relative;
    width: $inputbox-icon-width;
    color: $inputbox-icon-color;
    
    input {
        height: $inputbox-icon-height;
        left: 0;
        margin: 0;
        opacity: 0;
        padding: 0;
        position: absolute;
        top: 0;
        width: $inputbox-icon-width;
        z-index: 99; 
        
        &:hover {
            cursor: pointer;
        }
    }
    
	.input-skin	{
		border: 1px solid $inputbox-border-color;
        height: $inputbox-icon-height;
        left: 0;
        position: absolute;
        top: 0;
        width: $inputbox-icon-width;
        
        &.checked {
            .visible-checked {
                display: block !important;   
            } 

            .visible-unchecked {
                display: none !important;
            }
        }
    }

    .visible-checked {
        display: none;
    }

    .visible-unchecked {
        display: block;   
    }
}

.input-text {
    color: $checkbox-text-color;   
    font-size: 14px; 
    margin-left: 10px;
}
