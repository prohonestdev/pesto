
/*-----------------------------------------------------------------------------
- SELECTS
-----------------------------------------------------------------------------*/
$checkbox-icon-color: #d1d1d1;
$checkbox-icon-width: 14px;
$checkbox-icon-height: 14px;
$checkbox-text-color: #9e9e9e;

.checkbox-container {
    margin-bottom: -2px;
    display: inline-block;
    height: $checkbox-icon-height;
    position: relative;
    width: $checkbox-icon-width;
    color: $checkbox-icon-color;
    
    input[type=checkbox] {
        height: $checkbox-icon-height;
        left: 0;
        margin: 0;
        opacity: 0;
        padding: 0;
        position: absolute;
        top: 0;
        width: $checkbox-icon-width;
        z-index: 99; 
        
        &:hover {
            cursor: pointer;
        }
    }
    
    .checkbox-skin {
        height: $checkbox-icon-height;
        left: 0;
        position: absolute;
        top: 0;
        width: $checkbox-icon-width;
        
        &.checked {
            .visible-checked {
                display: block !important;   
            } 

            .visible-unchecked {
                display: none !important;
            }
        }
    }

    .visible-checked {
        display: none;
    }

    .visible-unchecked {
        display: block;   
    }
}


.checkbox-text {
    color: $checkbox-text-color;   
    font-size: 14px; 
    margin-left: 10px;
}