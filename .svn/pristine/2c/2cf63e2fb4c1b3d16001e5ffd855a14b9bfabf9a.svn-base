
/*-----------------------------------------------------------------------------
- SLIDERS
-----------------------------------------------------------------------------*/


.slider-range {
    border: none;
	background-color: transparent;
	height: 13px; 
            
    .ui-slider-handle {
        background-color: $color-dark !important;
		border: none;
        height: 13px !important;
		margin-left: -4px;
        top: 0px !important;
        width: 9px !important;
		
		&.ui-state-focus {
			background-color: #333 !important;
		}
    }

    .ui-total-slider-range {       
        background-color: #eaeaea;
        height: 1px;
		width: 100%;
		position: absolute;
		top: 6px;
    }
	
	.ui-slider-range {       
        background-color: $color-normal;
        height: 1px;
		top: 6px;
    }
}



.price-amount {
    width: 37%;
}
