/*COLORS*/
.page-404 .mark-404 {
  margin: 0 auto;
  padding: 80px 0 40px 0;
  width: 50%; }
  .page-404 .mark-404 img {
    max-width: 100%; }
.page-404 .content-404 {
  width: 50%;
  margin: 0 auto;
  text-align: center; }
  .page-404 .content-404 span {
