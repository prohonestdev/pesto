//sidebar
$caret-size: 19px;
.sidebar {
    h4 {
        color: #787878;
        font-family: $font-secondary;
        font-weight: bold;
        height: 100%;
        letter-spacing: 0.9px;
        line-height: 45px;
        margin: -2px 0 0 0;
    }
    
    .panel-group-heading {
        height: 45px;
        position: relative;
        border-bottom: 2px solid #ccc;
        
        a.toggle {
            display: block;
            height: 16px;
            margin-top: -8px;
            position: absolute;
            right: 12px;
            text-align: center;
            text-decoration: blink;
            top: 50%;
            width: 16px;
        }
    }
    
    .panel-group {
        .panel {
            border: 0;
            border-radius: 0;
            
            &>.panel-heading {
                background-color: white;
                margin-left: -2px;
                position: relative;
                
                h5 {
                    color: #9e9e9e;
                    font-family: $font-primary;
                    font-size: 14px;
                }
                
                a.toggle {
                    display: block;
                    height: $caret-size;
                    line-height: $caret-size;
                    margin-top: -10px;
                    position: absolute;
                    right: 10px;
                    text-align: center;
                    text-decoration: blink;
                    top: 50%;
                    width: $caret-size;
                    
                    i {
                        line-height: $caret-size;
                    }
                }
            }
            
            .panel-body {
                padding: 13px 15px;
                
                ul {
                    padding-left: 8px;
                    li {
                        padding-bottom: 4px;
                        padding-top: 4px;
                    }
                }
                
                a {
                    color: #9e9e9e;
                    font-family: $font-primary;
                    font-size: 14px; 
                }
            }
        }
    }
    
    .popular-post,.comments,.achives,.last-video {
        > .row {
            padding: 15px 0;
        }
    }
    
    .popular-post {
        padding-top: 42px;

        >.row {
            margin: 0;
            .image,.image-comment {
                float: left;
            }
            
            .image {
                width: 85px;
            }
            
            .image-comment {
                padding-left: 25px;
                @include calc(width,"100% - 85px");
            }
        }
        
        .image-date span {
            color: #dadada;
            font-family: "Verdana";
            font-size: 16px;
        }
        
        .comment {
            color: #808080;
            font-family: $font-primary;
            font-size: 15px;
        }
    }
    .comments {
        padding-top: 43px;
        
        &> .row {
            margin: 0;
            .image,.image-comment {
                float: left;
            }
            .image {
                margin-top: 9px;
                width: 61px;
                img {
                    max-width: 100%;
                }
            }
            .image-comment {
                padding-left: 25px;
                @include calc(width,"100% - 61px");    
            }
        }
        
        h4 {
            margin-bottom: 12px;
        }
        
        .image-comment {
            >div {
                color: #808080;
                font-family: $font-primary;
                font-size: 15px;
                padding: 8px 0;
            }
            strong {
                font-family: $font-primary;
                font-size: 16px;    
            }
            span {
                color: #d1d1d1;
                font-family: "Arial";
                font-size: 14px;
            }
        }
    }
    .archives {
        padding-top: 38px;
        
        h4 {
            margin-bottom: 15px;
        }
        
        ul {
            padding-left: 0;
            li {
                padding-top: 10px;
                input {
                    margin: 0;
                }
                span {
                    font-family: $font-primary;
                    font-size: 14px;
                    padding-left: 12px;
                }
            }
        }
    }
    .last-video {
        padding-top: 30px;
        
        .videoWrapper {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 */
            padding-top: 25px;
            height: 0;
        }
        
        .videoWrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        
        h4 {
            margin-bottom: 30px;
        }        
    }
    
    .tag-cloud {
        padding-top: 58px;
        
        .tag-list{
            padding: 15px 0;
            margin-left: -5px;
        }
    }
    
    .flickr-stream {
        &> .flickr-group {
            float: left;
            padding-top: 15px;
            width: 50%;
            > .flickr {
                padding: 1px;
                width: 100%;
            }
            .flickr-group .flickr {
                float:left;
                padding: 1px;
                width: 50%;
            }
            img {
                max-width: 100%;
            }
        }
    }
}

