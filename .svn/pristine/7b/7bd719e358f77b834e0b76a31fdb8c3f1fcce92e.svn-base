//GridLayout

/* ---- isotope ---- */

.grid {
    background: #FFF;
}

/* clear fix */
.grid:after {
    content: '';
    display: block;
    clear: both;
}

.grid-item {
    float: left;
}

.grid-item img {
    display: block;
    width: 100%;
    height: 100%; 
} 

/* ---- .grid-item ---- */
.grid-rectangle-3-columns {
    .grid-sizer,
    .grid-item {
        width: 33.33333333%;
        padding: 15px;
    }
}

.grid-square {
    .grid-sizer,
    .grid-item { 
        width: 25%;
        padding: 10px;
    }
    
    /* 2 columns */
    .grid-item-width2 {
     width: 50%; 
    }

    /* 3 columns */
    .grid-item-width3 {
     width: 75%; 
    }

    /* 4 columns */
    .grid-item-width4 {
     width: 100%; 
    }

    /* 1/2 rows */
    .grid-item-height50 {
        &:before {
            content: '';
            padding-top: 50%;
            display: inline-block;
            float:left;
        }
    }
    
    /* 1 rows */
    .grid-item-height100 {
        &:before {
            content: '';
            padding-top: 100%;
            float:left;
        }
    } 
       
    /* 2 rows */
    .grid-item-height200 {
        &:before {
            content: '';
            padding-top: 200%;
            display: inline-block;
            float:left;
        }
    }

    /* 3 rows */
    .grid-item-height300 {
        &:before {
            content: '';
            padding-top: 300%;
            display: inline-block;
            float:left;
        }
    }
}

.grid-masonry {
    .grid-sizer,
    .grid-item { 
        width: 25%;
        padding: 2.5px;
    }
    
    /* 2 columns */
    .grid-item-width2 {
     width: 50%; 
    }

    /* 3 columns */
    .grid-item-width3 {
     width: 75%; 
    }

    /* 4 columns */
    .grid-item-width4 {
     width: 100%; 
    }

    /* 1/2 rows */
    .grid-item-height50 {
        &:before {
            content: '';
            padding-top: 50%;
            display: inline-block;
            float:left;
        }
    }
    
    /* 1 rows */
    .grid-item-height100 {
        &:before {
