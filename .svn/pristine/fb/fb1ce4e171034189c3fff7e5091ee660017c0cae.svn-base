
/*-----------------------------------------------------------------------------

- custom carousel
-----------------------------------------------------------------------------*/
/* ARROWS */

/* VARIABLES */

$nav_height                 : 46px;
$nav_popup_text_line_height : 36px;
$nav_width                  : 36px;
$nav_background_color       : #000;
$nav_background_rgba        : rgba(0,0,0,0.0);
$nav_border_radius          : 0px;
$nav_arrow_color            : #444645;
$nav_border                 : 2px solid #444645;

.nav_icon{
    min-width       : $nav_height;
    min-height      : $nav_width;
    background      : $nav_background_color;
    background      : $nav_background_rgba;
    border-radius   : $nav_border_radius; 
    border          : $nav_border;
} 

.rev_pesto{

    &.tparrows {
        @extend .nav_icon;
        cursor      :pointer;
        position    :absolute;
        display     :block;
        z-index     :100;
    }

    &.tparrows:before {
        font-family     : "revicons";
        font-size       : 20px;
        color           : $nav_arrow_color;
        display         : block;
        line-height     : $nav_popup_text_line_height;
        text-align      : center;    
        z-index         : 2;
        position        : relative;
    }

    &.tparrows.tp-leftarrow:before {
        content: "\e824";
    }

    &.tparrows.tp-rightarrow:before {
        content: "\e825";
    }

    .tp-title-wrap { 
        position:absolute;
        z-index:1;
        display:inline-block;
        background:$nav_background_color;
        background:$nav_background_rgba;
        top:0px;
        margin-left:0px;
        overflow:hidden; 
        transition: opacity 0.3s;
        -webkit-transition:opacity 0.3s;
        -moz-transition:opacity 0.3s;
        -webkit-transform: scale(0);
        -moz-transform: scale(0);
        transform: scale(0);  
        visibility:hidden;
        opacity:0;
    }

    &.tparrows:hover .tp-title-wrap{
        -webkit-transform: scale(1);
        -moz-transform: scale(1);
        transform: scale(1);
        opacity:1;
        visibility:visible;
    }

    &.tp-rightarrow .tp-title-wrap { 
        right:0px;
        margin-right:0px;margin-left:0px;
        -webkit-transform-origin:100% 50%;
        border-radius:35px;
        padding-right:20px;
        padding-left:10px;
    }


    &.tp-leftarrow .tp-title-wrap { 
        padding-left:20px;
        padding-right:10px;
    }

    .tp-arr-titleholder {
        letter-spacing: 3px;
        position:relative;
        -webkit-transition: -webkit-transform 0.3s;
        transition: transform 0.3s;
        transform:translateX(200px);  
        text-transform:uppercase;
        color:#fff;
        font-weight:600;
        font-size:13px;
        line-height:$nav_popup_text_line_height;
        white-space:nowrap;
        padding:0px 20px;
        margin-left:11px;
        opacity:0;  
    }

    .tp-arr-imgholder {
        width:100%;
        height:100%;
        position:absolute;
        top:0px;
        left:0px;
        background-position:center center;
        background-size:cover;
    }

    .tp-arr-img-over {
        width:100%;
        height:100%;
        position:absolute;
        top:0px;
        left:0px;
        background:#000;
        background:rgba(0,0,0,0.5);
    }

    &.tp-rightarrow .tp-arr-titleholder {
        transform:translateX(-200px); 
        margin-left:0px; margin-right:11px;
    }

    &.tparrows:hover .tp-arr-titleholder {
        transform:translateX(0px);
        -webkit-transform:translateX(0px);
        transition-delay: 0.1s;
        opacity:1;
    }

    /* BULLETS */
    &.tp-bullets {
    }

    &.tp-bullets:before {
        content:" ";
        position:absolute;
        width:100%;
        height:100%;
        background: #555555; /* old browsers */
        background: -moz-linear-gradient(top,  #555555 0%, #222222 100%); /* ff3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#555555), color-stop(100%,#222222)); /* chrome,safari4+ */
        background: -webkit-linear-gradient(top,  #555555 0%,#222222 100%); /* chrome10+,safari5.1+ */
        background: -o-linear-gradient(top,  #555555 0%,#222222 100%); /* opera 11.10+ */
        background: -ms-linear-gradient(top,  #555555 0%,#222222 100%); /* ie10+ */
        background: linear-gradient(to bottom,  #555555 0%,#222222 100%); /* w3c */
        filter: progid:dximagetransform.microsoft.gradient( startcolorstr="#555555", endcolorstr="#222222",gradienttype=0 ); /* ie6-9 */
        padding:10px 15px;
        margin-left:-15px;margin-top:-10px;
        box-sizing:content-box;
        border-radius:10px;
        box-shadow:0px 0px 2px 1px rgba(33,33,33,0.3);
    }

    .tp-bullet {
        width:13px;
        height:13px;
        position:absolute;
        background:#111;    
        border-radius:50%;
        cursor: pointer;
        box-sizing:content-box;
    }

    .tp-bullet:hover,
    .tp-bullet.selected {
        background: #e5e5e5; /* old browsers */
        background: -moz-linear-gradient(top,  #e5e5e5 0%, #999999 100%); /* ff3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e5e5e5), color-stop(100%,#999999)); /* chrome,safari4+ */
        background: -webkit-linear-gradient(top,  #e5e5e5 0%,#999999 100%); /* chrome10+,safari5.1+ */
        background: -o-linear-gradient(top,  #e5e5e5 0%,#999999 100%); /* opera 11.10+ */
        background: -ms-linear-gradient(top,  #e5e5e5 0%,#999999 100%); /* ie10+ */
        background: linear-gradient(to bottom,  #e5e5e5 0%,#999999 100%); /* w3c */
        filter: progid:dximagetransform.microsoft.gradient( startcolorstr="#e5e5e5", endcolorstr="#999999",gradienttype=0 ); /* ie6-9 */
        border:1px solid #555;
        width:12px;height:12px;
    }

    .tp-bullet-image {
    }

    .tp-bullet-title {
    }


    /* THUMBS */
    .tp-thumb {
        opacity:1
    }

    .tp-thumb-over {
        background:#000;
        background:rgba(0,0,0,0.25);
        width:100%;
        height:100%;
        position:absolute;
        top:0px;
        left:0px;
        z-index:1;
        -webkit-transition:all 0.3s;
        transition:all 0.3s;
    }

    .tp-thumb-more:before {
        font-family: "revicons";
        font-size:12px;
        color:#aaa;
        color:rgba(255,255,255,0.75);
        display:block;
        line-height: 12px;
        text-align: left;    
        z-index:2;
        position:absolute;
        top:20px;
        right:20px;
        z-index:2;
    }
    .tp-thumb-more:before {
        content: "\e825";
    }

    .tp-thumb-title {
        font-family:"Raleway";
        letter-spacing:1px;
        font-size:12px;
        color:#fff;
        display:block;
        line-height: 15px;
        text-align: left;    
        z-index:2;
        position:absolute;
        top:0px;
        left:0px;
        z-index:2;
        padding:20px 35px 20px 20px;
        width:100%;
        height:100%;
        box-sizing:border-box;
        transition:all 0.3s;
        -webkit-transition:all 0.3s;
        font-weight:500;
    }

    .tp-thumb.selected .tp-thumb-more:before,
    .tp-thumb:hover .tp-thumb-more:before {
        color:#aaa;

    }

    .tp-thumb.selected .tp-thumb-over,
    .tp-thumb:hover .tp-thumb-over {
        background:#fff;
    }

    .tp-thumb.selected .tp-thumb-title,
    .tp-thumb:hover .tp-thumb-title {
        color:#000;

    }


    /* TABS */
    .tp-tab-title {
        color:#a8d8ee;
        font-size:13px;
        font-weight:700;
        text-transform:uppercase;
        font-family:"Roboto Slab";
        margin-bottom:5px;
    }

    .tp-tab-desc {
        font-size:18px;
        font-weight:400;
        color:#fff;
        line-height:25px;
        font-family:"Roboto Slab";
    }
    
    .tp-thumb-icon-circle {
        background-color: transparent;
        text-align: center;
        
        i {
            font-size: 10px !important;
			line-height: 20px;
        }
    }
    
    .selected .tp-thumb-icon-circle,
	.tp-thumb-icon-circle:hover {
        i {
            font-size: 16px !important;
        }
    }
	
	.tp-thumb {
        height: 20px;
		text-align: center;
		width: 20px;
	}
}

.rev_slider {
	position: relative;
}
.rev_slider2 {
	position: relative;
}

.theme-owl-carousel {
	.item{
		background: #3fbf79;
		color: #FFF;
		margin: 0px;
		padding: 0px 0px;
		text-align: center;
		
		img{
			display: block;
			height: 100%;
			width: 100%;
		}
	}
	
	.owl-controls {
		position: relative;
		
		.owl-dots {
			margin-top: -35px;
			text-align: center;
			
			.owl-dot {
				background-color: transparent;
				display: inline-block;
				height: 20px;
				width: 20px;
				margin: 2px;
				
				span {
					border-radius: 4px;
					background-color: #444645;
					display: block;
					height: 8px;
					margin: 6px;
					width: 8px;
					
					
				}
				
				&.active,
				&:hover {
					span {
					border-radius: 7px;
					height: 14px;
					width: 14px;
					margin: 3px;
					}
				}
			}
		}
	}
	
}