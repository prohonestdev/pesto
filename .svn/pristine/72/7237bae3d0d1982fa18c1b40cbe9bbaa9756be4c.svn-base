
// ================================================
// Config
// ================================================

@import "config/common";

// ================================================

.page-404 {
    .mark-404 {
        margin: 0 auto;
        padding: 40px 0;
        width: 50%;
        img {
            max-width: 100%;
        }
    }
    .content-404 {
        width: 50%;
        margin: 0 auto;
        text-align: center;
        span {
            font-family: 'verdana';
            font-size: 23px;
        }
        h4 {
            letter-spacing: 5px;
            line-height: 51px;
            margin: 23px 0;
        }
    }
    .search {
        width: 33.33333333333%;
        margin: 0 auto;
        padding: 15px 0;
    }
    form {
        margin: 0 auto;
        .inner-button {
            border: 1px solid #676460;
            height: 50px;
            width: 100%;
            input {
                border: 0;
                font-family: $font-primary;
                height: 50px;
                width: 84%;
            }
            span {
                border: 0;
                display: table-cell;
                width: 16%;
                vertical-align: middle;
                button.btn {
                    border: 0;
                    i {
                        color: $color9;
                    }
                }
            }
        }
    }
}

@media (max-width: 991px) {
    .content-404 {
        span {
            font-size: 18px;
        }
    }
}
@media (max-width: 767px) {
    .content-404 {
        span {
            font-size: 11px;
        }
    }
}