
// ================================================
// Config
// ================================================

@import "config/common";

// ================================================
// Shop

.shop {
    h1 {
        font-family: $font-secondary;
        font-size: 20px;
    }
    h3 {
        font-family: $font-secondary;
        font-size: 19px;
    }
    &.type1 {
        .content-header {
            h1 {
                font-family: $font-secondary;
            }
        }
        .product-carousel , .product-summary {
            float: left;
            padding-left: 15px;
            padding-right: 15px;
        }
        // Product Information
        .product-summary {
            h1 {
                font-family: $font-primary;
                letter-spacing: normal;
                margin-top: 20px;
            }
            .select {
                ul li{
                    margin-bottom: 14px;
                    margin-top: 14px;
                }
                .size {
                    margin-left: 1px;
                }
                .color {
                    margin-left: -2px;
                }                
            }
            
            .share {
                ul{
                    margin-left: 1px;
                }
            }
            .cart {
                .add-cart {
                    font-family: $font-secondary;
                }
            }
        }
        
        // Tab 
        .tabs-vertical.tabs-left {
            .nav-tabs {
                width: 20.5125282%;
                li a {
                    font-family: $font-secondary;
                    font-size: 14px;
                }
            }    
            .tab-content {
                border: 1px solid #F3F3F3;
                width: 79.487179%;
                > div {
                    padding: 16px 40px;
                }
                
                .comments-header {
                    h3 {
                        letter-spacing: 2.1px;
                        margin-bottom: 28px;
                    }
                    
                }
                .reviews .review {
                    .image,.image-comment {
                        float: left;
                        margin-bottom: 20px;
                    }
                    .image {
                        img {
                            border-radius: 50%;
                        }
                        height: 100px;
                        padding: 16px 0;
                        width: 70px;
                    }
                    .image-comment {
                        margin-left: 30px;
                        p {
                            margin: 10px 0;
                        }
                        strong {
                            font-size: 18px;
                        }
                        span {
                            color: #c2c1c1;
                            font-family: "Arial";
                            font-size: 14px;
                        }
                        @include calc(width, "100% - 100px");
                    }
                }
                .review-customer {
                    h3 {
                        margin-bottom: 35px;
                    }
                    margin-top: 68px;
                    margin-bottom: 5px;
                }
            }
        }
        
        
    }

    .price {
        ins {
            color: #686868;
            font-family: $font-secondary;
            font-size: 18px;
            text-decoration: none;        
        }
        del {
            color: #d1d1d1;
            font-family: $font-secondary;
            font-size: 14px;
        }    
    }
}

.star-rating {
    position: relative;
    
    &:before {
        content: "\f006 \f006 \f006 \f006 \f006";
        left: 0;
        top: 0;
    }
}

#reviewForm {
    .row {
        padding-bottom: 10px;
        padding-top: 10px;
    }
}

.content-footer {
    padding-top: 130px;
    padding-bottom: 40px;
    h2 {
        font-family: $font-secondary;
        font-size: 22px;
        margin-bottom: 50px;
    }
    h4 {
        font-size: 16px;
    }
    img {
        max-width: 100%;
    }
}

.next-product,.prev-product {
    border: 1px solid #d5d5d5;
    display: block;
    float: left;
    height: 28px;
    line-height: 26px;
    text-align: center;
    width: 35px;
}


