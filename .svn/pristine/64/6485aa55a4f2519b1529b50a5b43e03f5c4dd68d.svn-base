@import "config/common";


#contactForm {
    input {
        font-family: $font-secondary;
        font-size: 14px;
    }
    input[type="submit"] {
        border-color: #444645;
    }
    label {
        font-family: $font-primary;
        font-size: 12px;
        font-weight: normal;
        text-transform: uppercase;
    }
}

.content-footer {
    a {
        font-size: 35px;
    }
    h4 {
        font-family: $font-secondary;
        font-size: 18px;
        margin-top: 20px;
        margin-bottom: 15px;
    }
    
    .location,.details,.phone {
        > div {
            font-family: "Verdana";
            font-size: 14px;
            padding: 5px 0;
        }
    }
}
.contactus.type1,.contactus.type2 {
    .content-footer {
        padding-bottom: 30px;
    }
}
.contactus.type3 {
    .content-footer {
        padding-bottom: 45px; 
    }
}

.contactus.type1 {
    .content-footer {
        padding-top: 90px;
    }
}

.contactus.type2,.contactus.type3 {
    #contactForm input {
        height: 43px;
        margin-bottom: 25px;
    }
    .content-main .review-customer {
        h3 {
            margin-bottom: 20px;
        }
        textarea {
            height: 229px;
        }        
    }
}

.contactus.type2 {
    .content-main .review-customer {
        input[type="submit"] {
            margin-top: 16px;
        }
    }
    .content-footer {
        padding-top: 25px;
    }
}

.contactus.type3 .content-footer {
    padding-top: 100px;
}

.contactus.type3 {
    .content-main .review-customer {
        padding-bottom: 45px;
        input[type="submit"] {
            margin-top: 23px;
        }
    }    
}