.content-header {
    margin-bottom: 40px;
    .breadcrumb {
        background: transparent;
        margin: 0;
        li a{
            color: #aaaaaa;
            font-family: $font-primary;
            font-size: 13px;
        }
        li:last-child {
            color: #777777;
            font-family: $font-primary;
            font-size: 13px;
        }
    }
    &.breadcrumb-header {
        .wrapper {
            border-bottom: 1px solid #f2f2f2;
            border-top: 1px solid #f2f2f2;
            padding-bottom: 16px;
            padding-top: 16px;
            position: relative;
        }
    }
        
    .page-title,.breadcrumb {
        display: inline-block;
        padding: 0;
    }
    .breadcrumb-right {
        line-height: 43px;
        position: absolute;
        margin-right: 15px;
        right: 0;
    }
    &.image-header {
        .wrapper {
            position: relative;
        }
        .image {
            img {
                max-width: 100%;
            }
            .page-title {
                left: 40%;
                position: absolute;
                text-align: center;
                top: 40%;
                width: 20%;
                h1 {
                    color: $color-header-top-hover;
                    letter-spacing: 3.5px;
                }
            }
        }

    }
}

